{
  "name": "homesite",
  "version": "1.0.0",
  "type": "module",
  "description": "Real estate investment website",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:analyze": "vite build --mode analyze",
    "build:debug": "vite build --mode development",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "lint:html": "htmlhint \"src/**/*.html\" --config .htmlhintrc",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "lint:all": "npm run lint && npm run lint:css && npm run lint:html",
    "validate": "npm run format:check && npm run lint:all",
    "setup:project": "node scripts/setup-project.js",
    "validate:full": "node scripts/validate.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "optimize-images": "node scripts/optimize-images.js",
    "validate-content": "node scripts/validate-content.js",
    "generate-sitemap": "node scripts/generate-sitemap.js",
    "lighthouse": "lighthouse http://localhost:4173 --output=html --output-path=./lighthouse-report.html",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "deploy": "npm run build && npm run deploy:gh-pages",
    "deploy:gh-pages": "gh-pages -d dist"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^9.0.0",
    "@semantic-release/npm": "^11.0.0",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "ajv": "^8.12.0",
    "conventional-changelog-conventionalcommits": "^7.0.0",
    "eslint": "^8.55.0",
    "gh-pages": "^6.0.0",
    "glob": "^10.3.10",
    "htmlhint": "^1.1.4",
    "husky": "^8.0.3",
    "jsdom": "^23.2.0",
    "lighthouse": "^11.4.0",
    "lint-staged": "^15.2.0",
    "playwright": "^1.40.0",
    "prettier": "^3.1.0",
    "semantic-release": "^22.0.0",
    "serve": "^14.2.4",
    "sharp": "^0.33.0",
    "stylelint": "^16.23.0",
    "stylelint-config-standard": "^39.0.0",
    "terser": "^5.26.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
